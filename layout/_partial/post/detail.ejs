<article class="post">
  <header class="post-header">
    <h1 class="post-title">
      <%= post.title %>
    </h1>
    <section class="post-meta">
      <%- partial('components/time', { post: post }) %>      
    </section>
  </header>
  <section class="post-content">
    <%- post.content %>
  </section>
  <%- partial("post-footer", { post: post }) %>
</article>
